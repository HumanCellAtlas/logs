{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          ${ES_USER_ARRAY}
        ]
      },
      "Action": "es:*",
      "Resource": "arn:aws:es:${REGION}:${ACCOUNT_ID}:domain/hca-logs/*"
    },
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "es:*",
      "Resource": "arn:aws:es:${REGION}:${ACCOUNT_ID}:domain/hca-logs/*",
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": [
            ${IP_ADDRESS_ARRAY}
          ]
        }
      }
    }
  ]
}
